@model IEnumerable<InventoryTracker.Models.DropDown>

@{
    ViewBag.Title = "Index";
}

<h2>Drop Down Menu</h2>

<p>
    @Html.ActionLink("Create New", "Edit", new { id = 0 })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DropDownID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DropDownID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DropDownID })
        </td>
    </tr>
}

</table>
